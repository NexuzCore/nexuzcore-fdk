{
  "name": "binutils",
  "version": "2.43",
  "urls": [
    "https://ftp.gnu.org/gnu/binutils/binutils-2.43.tar.xz",
    "https://mirrors.kernel.org/gnu/binutils/binutils-2.43.tar.xz",
    "https://ftpmirror.gnu.org/binutils/binutils-2.43.tar.xz"
  ],
  "src_dir": "work/binutils-{version}",
  "deps": ["zlib"],
  "targets": {
    "x86_64": {
      "triplet": "x86_64-unknown-linux-gnu",
      "configure_flags": [
        "--disable-werror",
        "--enable-shared",
        "--enable-64-bit-bfd",
        "--disable-gprofng"
      ]
    },
    "arm64": {
      "triplet": "aarch64-unknown-linux-gnu",
      "configure_flags": [
        "--disable-werror",
        "--enable-shared",
        "--disable-gprofng",
        "--with-sysroot={sysroot}",
        "--with-pkgversion='cross-binutils 2.43'"
      ]
    }
  },
  "build_options": {
    "parallel_jobs": "auto",
    "install_prefix": "{rootfs}/usr"
  }
}
