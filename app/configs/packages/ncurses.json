{
  "name": "ncurses",
  "version": "6.5",
  "urls": [
    "https://ftp.gnu.org/gnu/ncurses/ncurses-6.5.tar.gz",
    "https://mirrors.kernel.org/gnu/ncurses/ncurses-6.5.tar.gz"
  ],
  "src_dir": "work/ncurses-{version}",
  "deps": ["pkgconf"],
  "configure": [
    "--with-shared",
    "--without-debug",
    "--enable-widec",
    "--with-termlib",
    "--enable-pc-files",
    "--with-cxx-shared",
    "--disable-stripping"
  ]
}
